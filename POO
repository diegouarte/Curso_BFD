    ligado = False
    def ligar_motor(self):
        self.ligado = True
        print('Motor ligado')
acao1 = Motor()
acao1.ligar_motor()

# Questão 26: Crie uma classe Casa com atributos cor e tamanho. Crie duas casas com valores diferentes e exiba os dados.

class Casa():
    def __init__(self, cor, tamanho):
        self.cor = cor
        self.tamanho = tamanho
    def info(self):
        print(f'Cor da casa: {self.cor}. Tamanho: {self.tamanho:.2f}m²')
casa1 = Casa('Branca', 25)
casa2 = Casa('Amarela', 15)
casa1.info()
casa2.info()

